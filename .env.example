# Configurações PostgreSQL (Supabase)
POSTGRES_HOST=db.qwbpruywwfjadkudegcj.supabase.co
POSTGRES_PORT=5432
POSTGRES_DATABASE=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=sua_senha_postgres
POSTGRES_URL=postgresql://postgres:sua_senha@db.qwbpruywwfjadkudegcj.supabase.co:5432/postgres

# ===========================================
# CONFIGURAÇÕES JWT
# ===========================================
