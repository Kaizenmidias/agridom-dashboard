# Configurações do Servidor para Produção
NODE_ENV=production
PORT=3001

# Configurações do Banco de Dados MySQL
DB_HOST=localhost
DB_USER=seu_usuario_mysql
DB_PASSWORD=sua_senha_mysql
DB_NAME=seu_banco_dados
DB_PORT=3306

# Configurações JWT
JWT_SECRET=sua_chave_secreta_muito_forte_aqui_com_pelo_menos_32_caracteres
JWT_EXPIRES_IN=24h

# Configurações de Email (para recuperação de senha)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app
EMAIL_FROM=noreply@seudominio.com

# URLs de produção
FRONTEND_URL=https://seudominio.com
BACKEND_URL=https://seudominio.com/backend

# Configurações de CORS
CORS_ORIGIN=https://seudominio.com

# Configurações de upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Configurações de segurança
BCRYPT_ROUNDS=12
SESSION_SECRET=outra_chave_secreta_para_sessoes