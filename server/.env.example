# Configurações do Banco de Dados Local (Desenvolvimento)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=
DB_NAME=agridom_dev
DB_PORT=5432

# Configurações do Supabase
dashboard_POSTGRES_HOST=db.your-project-ref.supabase.co
dashboard_POSTGRES_DATABASE=postgres
dashboard_POSTGRES_USER=postgres
dashboard_POSTGRES_PASSWORD=your-supabase-password
dashboard_POSTGRES_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres
dashboard_POSTGRES_PRISMA_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?pgbouncer=true&connect_timeout=15
dashboard_POSTGRES_URL_NON_POOLING=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres
dashboard_SUPABASE_URL=https://your-project-ref.supabase.co
dashboard_NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
dashboard_NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
dashboard_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
dashboard_SUPABASE_JWT_SECRET=your-jwt-secret

# JWT (mantido para compatibilidade local)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Configurações de Email (para recuperação de senha)
# Para desenvolvimento, você pode usar Ethereal Email (emails de teste)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal.user@ethereal.email
SMTP_PASS=ethereal.pass
FROM_EMAIL=noreply@agridom.com

# URL do Frontend (para links de recuperação)
FRONTEND_URL=http://localhost:5173

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Para produção, use um provedor de email real como:
# Gmail, SendGrid, Mailgun, etc.
