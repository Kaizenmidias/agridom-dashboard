# Configurações do Banco de Dados Local (Desenvolvimento)
DB_HOST=localhost
DB_USER=postgres
DB_PASSWORD=
DB_NAME=agridom_dev
DB_PORT=5432

# Configurações do Supabase (Produção)
SUPABASE_DB_HOST=db.your-project-ref.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-supabase-password
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Configurações de Email (para recuperação de senha)
# Para desenvolvimento, você pode usar Ethereal Email (emails de teste)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_USER=ethereal.user@ethereal.email
SMTP_PASS=ethereal.pass
FROM_EMAIL=noreply@agridom.com

# URL do Frontend (para links de recuperação)
FRONTEND_URL=http://localhost:5173

# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Para produção, use um provedor de email real como:
# Gmail, SendGrid, Mailgun, etc.
