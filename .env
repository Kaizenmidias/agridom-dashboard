# ===========================================
# AGRIDOM DASHBOARD - VARIÁVEIS DE AMBIENTE
# ===========================================
# Configuração para desenvolvimento local e produção com Supabase

# Ambiente de execução
NODE_ENV=development

# Configurações do Servidor
PORT=3001
FRONTEND_URL=http://localhost:5173

# CORS (para desenvolvimento)
CORS_ORIGIN=http://localhost:5173

# ===========================================
# BANCO DE DADOS LOCAL (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=sua_senha_postgres
DB_NAME=agridom_dev

# ===========================================
# SUPABASE (PRODUÇÃO)
# ===========================================
# Substitua pelos valores do seu projeto Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua_chave_anonima_supabase
SUPABASE_SERVICE_ROLE_KEY=sua_chave_service_role_supabase
SUPABASE_DB_HOST=db.seu-projeto.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=sua_senha_supabase

# Pool de conexões
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=sua_chave_jwt_super_secreta_para_desenvolvimento_local_123456789
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===========================================
# LOGS E MONITORAMENTO
# ===========================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# ===========================================
# CONFIGURAÇÕES DE EMAIL (OPCIONAL)
# ===========================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=seu-email@gmail.com
# EMAIL_PASSWORD=sua-senha-app
# EMAIL_FROM=noreply@agridom.com

# ===========================================
# CONFIGURAÇÕES DE UPLOAD
# ===========================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf